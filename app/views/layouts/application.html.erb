<!DOCTYPE html>
<html>
	<head>
		<title>Kart</title>
		<%= stylesheet_link_tag    'application', media: 'all' %>
		<%= javascript_include_tag 'application' %>
		<%= csrf_meta_tags %>
	</head>
	<body>
		<% flash.each do |key, val| %>
			<div class="<%= get_alert_class(key) %>" role="alert"><%= val %></div>
		<% end %>
		<div class='container'>
			<%= yield %>
		</div>
	</body>
</html>
