<div class='login-container col-sm-4'>
  <%= image_tag('login.jpg') %>
  <div class='login-form'>
    <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
      <%= f.email_field :email, autofocus: true, class: 'form-control field', placeholder: 'Username/Email' %>
      <%= f.password_field :password, autocomplete: "off", class: 'form-control field', placeholder: 'Password' %>
      <%= f.submit "Log in", class: 'btn btn-primary field' %>
      <% if devise_mapping.rememberable? -%>
        <%= f.check_box :remember_me %> <%= f.label :remember_me %>
      <% end -%>
    <% end %>
    <%= render "devise/shared/links" %>
  </div>
</div>